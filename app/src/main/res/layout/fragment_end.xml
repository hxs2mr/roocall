<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.gykj.rollcall.ui.analyse.fragment.EndViewModel"/>
    </data>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/color_efefef">


                <RelativeLayout
                    android:layout_toLeftOf="@+id/analyse_search_layout"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_search_et_bg"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp">


                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/icon_search_normal"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="36dp"
                        android:background="@null"
                        android:hint="@string/please_input_name_or_number"
                        android:textSize="12sp"
                        android:textColor="@color/color_333333"/>


                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/analyse_search_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp">


                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/icon_search_et_bg"
                        android:gravity="center"
                        android:textColor="@color/color_5298fc"
                        android:text="@string/search"/>

                    <RelativeLayout
                        android:layout_marginLeft="70dp"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/icon_search_et_bg">
                        
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@mipmap/ic_delete"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/color_808080"
                            android:textSize="12sp"
                            android:text="@string/delete_search_data"
                            android:layout_marginLeft="26dp"/>


                        
                    </RelativeLayout>


                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/icon_default_user"
                    binding:placeholderRes="@mipmap/icon_default_user" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_5298fc"
                    android:textSize="14sp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:text="张小溪-101室"/>

                <TextView
                    style="@style/lay_loss_text_style"
                    android:layout_marginLeft="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="26dp"
                    android:text="六年纪（1）班" />

                <TextView
                    style="@style/lay_loss_text_style"
                    android:layout_marginLeft="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:text="学号：20180563" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/color_5298fc"
                    android:background="@drawable/icon_deal_btn_bg"
                    android:text="未到率：24%"/>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentBottom="true">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/ic_scan"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        style="@style/lay_loss_text_style"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="26dp"
                        android:text="未到:12" />

                </RelativeLayout>


            </RelativeLayout>

            <ImageView
                style="@style/lay_divide_line_e5e5e5_horizontal"
                android:layout_height="10dp"
                android:contentDescription="@null"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/color_515151"
                    android:text="@string/history_sign_total_list"/>

                <ImageView
                    style="@style/lay_divide_line_e5e5e5_horizontal"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/end_total_chart"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</layout>