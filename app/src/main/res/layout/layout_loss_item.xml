<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.gykj.rollcall.ui.loss.LossItemVeiwModel"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_ffffff">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/icon_default_user"
                binding:url="@{viewModel.entity.avater}"
                binding:placeholderRes="@mipmap/icon_default_user" />


            <TextView
                android:id="@+id/loss_people_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/loss_people + viewModel.entity.people}"
                android:textColor="@color/color_515151"
                android:textSize="12sp"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="62dp" />

            <TextView
                android:id="@+id/loss_items_tv"
                android:layout_below="@+id/loss_people_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/items + viewModel.entity.items}"
                android:textColor="@color/color_6e6e6e"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="62dp"/>


            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                android:textColor="@{viewModel.entity.type == 0?@color/color_2ee0c5:@color/color_5298fc}"
                android:background="@{viewModel.entity.type == 0? @drawable/icon_no_deal_btn_bg :@drawable/icon_deal_btn_bg}"
                android:text="@{viewModel.entity.type == 0? @string/no_deal :@string/deal}"/>

            <RelativeLayout
                android:layout_below="@+id/loss_items_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/date + viewModel.entity.date}"
                    android:textColor="@color/color_6e6e6e"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/icon_deal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:layout_marginRight="40dp"/>


                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/icon_scan"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"/>


            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            style="@style/lay_divide_line_e5e5e5_horizontal"
            android:layout_height="5dp"/>

    </LinearLayout>


</layout>
