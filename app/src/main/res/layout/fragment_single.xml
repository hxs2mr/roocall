<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.gykj.rollcall.ui.call.fragment.SingleViewModel"/>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="26dp"
           android:layout_marginRight="44dp"
           android:layout_marginLeft="44dp"
           android:layout_marginTop="20dp">

           <TextView
               android:layout_width="60dp"
               android:layout_height="wrap_content"
               android:text="@string/start_date"
               android:textSize="12sp"
               android:textColor="@color/color_515151"
               android:layout_centerVertical="true"
               android:gravity="end"
               android:paddingRight="10dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:textSize="12sp"
               android:layout_marginLeft="60dp"
               android:textColor="@color/color_808080"
               android:layout_centerVertical="true" />

           <ImageView
               style="@style/lay_divide_line_e5e5e5_horizontal"
               android:layout_marginLeft="60dp"
               android:layout_alignParentBottom="true"/>


       </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginRight="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/arrive"
                android:textSize="12sp"
                android:textColor="@color/color_515151"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:paddingRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/color_808080"
                android:layout_centerVertical="true" />

            <ImageView
                style="@style/lay_divide_line_e5e5e5_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginRight="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/start_time"
                android:textSize="12sp"
                android:textColor="@color/color_515151"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:paddingRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/color_808080"
                android:layout_centerVertical="true" />

            <ImageView
                style="@style/lay_divide_line_e5e5e5_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginRight="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/arrive"
                android:textSize="12sp"
                android:textColor="@color/color_515151"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:paddingRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/color_808080"
                android:layout_centerVertical="true" />

            <ImageView
                style="@style/lay_divide_line_e5e5e5_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>

        <ImageView
            style="@style/lay_divide_line_e5e5e5_horizontal"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginRight="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/call_range"
                android:textSize="12sp"
                android:textColor="@color/color_515151"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:paddingRight="10dp"/>

            <CheckBox
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_toLeftOf="@+id/single_total_tv"
                android:layout_marginRight="6dp"
                binding:onCheckedChangedCommand="@{viewModel.onCheckedChangeCommand}"/>


            <TextView
                android:id="@+id/single_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/color_515151"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="@string/total_select"/>


        </RelativeLayout>


        <ImageView
            style="@style/lay_divide_line_e5e5e5_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"/>


        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            binding:layoutManager="android.support.v7.widget.GridLayoutManager"
            binding:spanCount="4"
            binding:itemBinding="@{viewModel.itemBinding}"
            binding:adapter="@{viewModel.adapter}"
            binding:items="@{viewModel.observableList}"/>


    </LinearLayout>

</layout>